{
  "name": "note",
  "version": "0.1.0",
  "main": "index.js",
  "author": "ruiming <ruiming.zhuang@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node ./build/src/index.js",
    "dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "build": "tsc",
    "test:run": "mocha --require espower-typescript/guess 'test/**/*.ts' --timeout=10000 --exit",
    "test:coverage": "cross-env NODE_ENV=test nyc npm run test:run",
    "test:watch": "cross-env NODE_ENV=test npm run test:run -- --watch",
    "test:ci": "cross-env NODE_ENV=ci nyc npm run test:run",
    "test": "cross-env NODE_ENV=test npm run test:run",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "tslint --project tsconfig.json '{src,test}/**/*.ts'",
    "prettier": "prettier --write '{src,test}/**/*.{ts,json,css,js}'",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "migration": "ts-node ./node_modules/.bin/typeorm migrations:generate -n Update",
    "task:initdb": "ts-node ./task/initdb.ts"
  },
  "dependencies": {
    "class-transformer": "^0.1.7",
    "class-validator": "^0.7.2",
    "config": "^1.26.1",
    "cross-env": "^5.1.1",
    "crypto-js": "^3.1.9-1",
    "faker": "^4.1.0",
    "ioredis": "^3.1.1",
    "js-yaml": "^3.9.0",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.2.2",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "mysql": "^2.13.0",
    "raven": "^2.1.2",
    "redlock": "^3.0.0",
    "reflect-metadata": "^0.1.10",
    "request-promise": "^4.2.1",
    "routing-controllers": "^0.7.1",
    "typedi": "^0.5.2",
    "typeorm": "^0.1.0-alpha.32",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.33",
    "@types/faker": "^4.1.0",
    "@types/ioredis": "^0.0.27",
    "@types/jsonwebtoken": "^7.2.2",
    "@types/kcors": "^2.2.1",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.23",
    "@types/koa-jwt": "^3.2.0",
    "@types/koa-logger": "^2.0.2",
    "@types/koa-router": "^7.0.22",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.49",
    "@types/power-assert": "^1.4.29",
    "@types/raven": "^2.1.2",
    "@types/redlock": "^3.0.1",
    "@types/request-promise": "^4.1.36",
    "@types/supertest": "^2.0.0",
    "@types/uuid": "^3.4.1",
    "codecov": "^3.0.0",
    "conventional-changelog-cli": "^1.3.4",
    "cz-conventional-changelog": "^2.0.0",
    "espower-typescript": "^8.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.2",
    "power-assert": "^1.4.4",
    "prettier": "^1.8.0",
    "supertest": "^3.0.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.4.0",
    "validate-commit-msg": "^2.12.2"
  },
  "lint-staged": {
    "*.{ts,js,json,css}": ["prettier --write", "git add"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "directories": {
    "test": "test/"
  },
  "nyc": {
    "cache": true,
    "reporter": ["lcov", "text"],
    "extension": [".js", ".ts"],
    "exclude": ["test"]
  }
}
